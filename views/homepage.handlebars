

{{#each blogPosts}}
<style>
    .card {
        margin-bottom: 20px;
    }
</style>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{user.username}}</h6>
        <p class="card-text">{{content}}</p>
        <a href="#" class="card-link">View Comments</a>
    </div>
</div>
{{/each}}
